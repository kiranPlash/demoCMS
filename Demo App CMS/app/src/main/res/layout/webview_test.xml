<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fonts.ArticleBodyFragment">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:scaleType="centerCrop"
        app:layout_collapseMode="parallax"/>

    <WebView
        android:id="@+id/web_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clickable="false"
        android:focusable="false" />


    <ImageView
        android:id="@+id/img_share"
        android:layout_width="@dimen/margin_30"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_50"
        android:paddingTop="@dimen/margin_10"
        android:scaleType="fitXY"
        android:src="@drawable/ic_share" />

    <ImageView
        android:id="@+id/img_book_mark"
        android:layout_width="@dimen/margin_30"
        android:layout_height="90dp"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_toLeftOf="@+id/img_share"
        android:paddingBottom="@dimen/margin_50"
        android:paddingTop="@dimen/margin_10"
        android:scaleType="fitXY"
        android:src="@drawable/ic_deselected_bookmarks" />

    <LinearLayout
        android:id="@+id/linear_login_progress_articlebody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/progress_bar11"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/pull_to_refresh_anim"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10"
            android:text="@string/please_wait"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
