<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:trunext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coal_login_blue"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_30"
        android:paddingRight="@dimen/margin_30"
        android:paddingTop="@dimen/margin_100">

        <in.plash.trunext.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_30"
            android:gravity="center"
            android:text="@string/login_title_text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_h4"
            trunext:fontName="Lato-Regular.ttf" />

        <in.plash.trunext.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/margin_100"
            android:gravity="left"
            android:text=" Sign Into The Next Big Thing"
            android:textColor="@color/sign_in_coal"
            android:textSize="@dimen/text_size_h7"
            trunext:fontName="Lato-Regular.ttf" />

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mtf_cardCollapsedHeight="1dp"
            app:mtf_image="@drawable/ic_mail_grey600_24dp"
            trunext:mtf_labelColor="@color/white">

            <in.plash.trunext.customfonts.MyEditText
                android:id="@+id/edit_txt_inside_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Email"
                android:textSize="@dimen/text_size_h7"
                trunext:fontName="Lato-Regular.ttf" />

        </com.github.florent37.materialtextfield.MaterialTextField>

        <in.plash.trunext.customfonts.MyTextView
            android:id="@+id/txt_inside_btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_50"
            android:background="@drawable/rounded_corner_signin"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_70"
            android:paddingRight="@dimen/margin_70"
            android:paddingTop="@dimen/margin_15"
            android:text="Get Magic Link"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_h7"
            trunext:fontName="Lato-Regular.ttf" />

        <in.plash.trunext.customfonts.MyTextView
            android:id="@+id/txt_inside_continueAnonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="@dimen/margin_20"
            android:text="CONTINUE ANONYMOUSLY"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />

    </LinearLayout>


    <!--
