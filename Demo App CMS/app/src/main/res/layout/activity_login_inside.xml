            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">


                <in.plash.trunext.customfonts.MyEditText
                    android:id="@+id/edit_txt_inside_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="PASSWORD"
                    android:inputType="textPassword"
                    android:textSize="@dimen/text_size_h7"
                    trunext:fontName="Lato-Regular.ttf" />

                <ImageButton
                    android:id="@+id/image_show_password"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/edit_txt_inside_password"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:paddingBottom="@dimen/margin_15"
                    android:scaleType="@null"
                    android:src="@drawable/visible1" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
