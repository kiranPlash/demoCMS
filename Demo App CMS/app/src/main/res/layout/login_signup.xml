<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:trunext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradiant"
    android:orientation="vertical">

    <in.plash.trunext.customfonts.MyTextView
        android:id="@+id/toolbar_title_forbes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_inside_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_15"
        android:text="@string/toolbar_title"
        android:textColor="@color/login_txt_forbes_white"
        android:textSize="30sp"
        android:visibility="visible"
        trunext:fontName="@string/Nicholas_Bold" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">


        <in.plash.trunext.customfonts.MyEditText
            android:id="@+id/edit_txt_signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/login_txt_forbes_white"
            android:ems="10"
            android:hint="Enter Email Id"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/login_txt_forbes_white"
            android:textColorHint="@color/login_txt_forbes_white"
            android:textSize="@dimen/text_size_h7"
            trunext:fontName="@string/gotham_book" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_20">

        <in.plash.trunext.customfonts.MyTextView
            android:id="@+id/txt_confrm_btn_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_signin"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_40"
            android:paddingLeft="@dimen/margin_40"
            android:paddingRight="@dimen/margin_40"
            android:paddingStart="@dimen/margin_40"
            android:text="Sign Up"
            android:textColor="@color/forbes_login_text_black"
            android:textSize="@dimen/text_size_h8"
            trunext:fontName="@string/gotham_book" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <in.plash.trunext.customfonts.MyTextView
            android:id="@+id/txt_inside_continueAnonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="By Signing up you agree to the"
            android:textColor="@color/login_txt_forbes_white"
            android:textSize="@dimen/text_size_h11"
            trunext:fontName="@string/gotham_book" />

        <in.plash.trunext.customfonts.MyTextView
            android:id="@+id/txt_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text=" Terms and Conditions"
            android:textColor="@color/forbes_login_heighlight"
            android:textSize="@dimen/text_size_h11"
            trunext:fontName="@string/gotham_book" />

        <in.plash.trunext.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text=" and"
            android:textColor="@color/login_txt_forbes_white"
            android:textSize="@dimen/text_size_h11"
            trunext:fontName="@string/gotham_book" />

        <in.plash.trunext.customfonts.MyTextView
            android:id="@+id/txt_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text=" Privacy Policies"
            android:textColor="@color/forbes_login_heighlight"
            android:textSize="@dimen/text_size_h11"
            trunext:fontName="@string/gotham_book" />
    </LinearLayout>


</RelativeLayout>