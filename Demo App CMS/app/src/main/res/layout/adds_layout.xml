<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:trunext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/inside_margin_71px"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_layout_bussiness"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/forbes_load"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/progress_animation" />

        <RelativeLayout
            android:id="@+id/something"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <VideoView
                android:id="@+id/adds_video_view"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true" />

        </RelativeLayout>

        <TextView
            android:id="@+id/view_buss_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/something"
            android:background="@color/alpha_black_add"
            android:padding="5dp"
            android:text="Advert"
            android:textColor="@color/white"
            android:visibility="visible" />


        <LinearLayout
            android:id="@+id/buss_layout_textdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/something"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/alpha_black"
                android:orientation="vertical"
                android:paddingBottom="@dimen/inside_margin_71px"
                android:paddingLeft="@dimen/inside_margin_71px"
                android:paddingRight="@dimen/inside_margin_71px">


                <in.plash.trunext.customfonts.MyTextView
                    android:id="@+id/adds_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingTop="@dimen/margin_10"
                    android:text="Heading"
                    android:textColor="@color/white"
                    android:textScaleX="1"
                    android:textSize="@dimen/text_size_h6"
                    trunext:fontName="@string/segoe_ui_bold" />

                <in.plash.trunext.customfonts.MyTextView
                    android:id="@+id/adds_Summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingTop="@dimen/margin_10"
                    android:text="@string/place_holder_sum"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_h8"
                    trunext:fontName="@string/DroidSerif_Regular" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_23"
                android:layout_marginLeft="@dimen/inside_margin_71px"
                android:layout_marginRight="18dp"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inside_margin_5px"
                    android:layout_marginTop="20dp"
                    android:background="@color/black" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>