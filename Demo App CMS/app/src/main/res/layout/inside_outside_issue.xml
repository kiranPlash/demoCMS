<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:trunext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12.5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_10">

        <ImageView
            android:id="@+id/issue_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:paddingTop="@dimen/margin_10"
            android:scaleType="centerCrop"
            android:src="@drawable/img_placeholder" />


        <in.plash.trunext.customfonts.MyTextView
            android:id="@+id/txt_issue_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:paddingTop="@dimen/margin_15"
            android:text="SEPTEMBER, 2015"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_h7"
            trunext:fontName="Lato-Regular.ttf" />

        <in.plash.trunext.customfonts.MyTextView
            android:id="@+id/issue_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:paddingBottom="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:text="@string/place_holder_sum"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_h7"
            trunext:fontName="DroidSerif-Regular.ttf" />

        <in.plash.trunext.customfonts.MyTextView
            android:id="@+id/issue_read"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@drawable/rounded_corner_inside"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/margin_15"
            android:paddingTop="@dimen/margin_20"
            android:text="READ NOW "
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_h7"
            trunext:fontName="Lato-Regular.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_10">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/inside_margin_5px"
                android:background="@color/inside_divider_grey" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>