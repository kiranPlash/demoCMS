<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:trunext="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bussiness_india_issue_lyt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_layout_bussiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/forbes_load"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/progress_animation" />

        <ImageView
            android:id="@+id/issue_image"
            android:layout_width="match_parent"
            android:layout_height="485dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/view_buss_overlay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/issue_image"
            android:background="#66bb0808" />

        <ImageView
            android:id="@+id/svg_triangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/issue_image"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="-2dp"
            android:layout_marginLeft="-3dp"
            android:adjustViewBounds="true"
            android:paddingRight="@dimen/inside_margin_5px"
            android:src="@drawable/trianglepic" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buss_layout_textdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inside_margin_71px"
            android:layout_marginRight="@dimen/inside_margin_71px"
            android:orientation="vertical">

            <in.plash.trunext.customfonts.MyTextView
                android:id="@+id/txt_issue_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEPTEMBER 28, 2015"
                android:textAllCaps="true"
                android:textColor="#6E6D6D"
                android:textSize="@dimen/text_size_h6.5"
                trunext:fontName="@string/HelveticaNeueLTStd_Hv" />

            <in.plash.trunext.customfonts.MyTextView
                android:id="@+id/issue_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_5"
                android:text="INDIA - US "
                android:textAllCaps="true"
                android:textColor="#CF0F09"
                android:textScaleX="1"
                android:textSize="@dimen/text_size_h7"
                trunext:fontName="@string/HelveticaNeueLTStd_Hv" />

            <in.plash.trunext.customfonts.MyTextView
                android:id="@+id/issue_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:paddingTop="@dimen/margin_5"
                android:text="@string/place_holder_sum"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_h7"
                trunext:fontName="@string/DroidSerif_Regular" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/inside_margin_90px"
            android:layout_marginLeft="@dimen/inside_margin_71px"
            android:layout_marginRight="18dp"
            android:layout_marginTop="@dimen/margin_20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_buss_btn_down"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="end"
                android:background="@null"
                android:visibility="gone"
                android:src="@mipmap/ic_buss_down" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/inside_margin_5px"
                android:layout_marginTop="10dp"
                android:background="@color/inside_divider_grey" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>