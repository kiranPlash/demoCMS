<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:trunext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="12.5dp"
    android:paddingLeft="12.5dp"
    android:paddingRight="12.5dp"
    android:paddingTop="@dimen/margin_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/forbes_load"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:focusable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/progress_animation" />


            <ImageView
                android:id="@+id/img_lyt_inside_publisher_cover_image"
                android:layout_width="match_parent"
                android:layout_height="485dp"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:paddingTop="@dimen/margin_10"
                android:scaleType="centerCrop" />

        </RelativeLayout>

        <in.plash.trunext.customfonts.MyTextView
            android:id="@+id/txt_lyt_inside_issue_month_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:paddingTop="@dimen/margin_15"
            android:text="SEPTEMBER, 2015"
            android:textAllCaps="true"
            android:textColor="@color/nav_text_grey"
            android:textSize="@dimen/text_size_h7"
            trunext:fontName="Lato-Regular.ttf" />

        <in.plash.trunext.customfonts.MyTextView
            android:id="@+id/txt_lyt_inside_issue_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:paddingBottom="@dimen/margin_10"
            android:paddingTop="@dimen/margin_10"
            android:text="@string/place_holder_sum"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_h7"
            trunext:fontName="DroidSerif-Regular.ttf" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <!-- <in.media.plash.trunext.customfonts.MyTextView
                 android:id="@+id/txt_lyt_inside_issue_read"
                 android:layout_width="200dp"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="@dimen/margin_20"
                 android:background="@drawable/rounded_corner"
                 android:clickable="true"
                 android:ellipsize="end"
                 android:focusable="true"
                 android:gravity="center"
                 android:padding="@dimen/margin_15"
                 android:paddingTop="@dimen/margin_20"
                 android:text="READ NOW "
                 android:textColor="@color/white"
                 android:textSize="@dimen/text_size_h7"
                 trunext:fontName="Lato-Regular.ttf" />-->

            <in.plash.trunext.customfonts.MyTextView
                android:id="@+id/txt_lyt_inside_issue_buy"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_20"
                android:background="@drawable/rounded_corner"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/margin_15"
                android:paddingTop="@dimen/margin_20"
                android:text="BUY"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_h7"
                trunext:fontName="Lato-Regular.ttf" />

            <in.plash.trunext.customfonts.MyTextView
                android:id="@+id/txt_lyt_inside_issue_read"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_20"
                android:background="@drawable/rounded_corner"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/margin_15"
                android:paddingTop="@dimen/margin_20"
                android:text="READ NOW"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_h7"
                trunext:fontName="Lato-Regular.ttf" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_10">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/inside_margin_5px"
                android:background="@color/inside_divider_grey" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>