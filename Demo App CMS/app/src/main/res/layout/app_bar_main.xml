        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_background"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            android:elevation="4dp"
            android:focusableInTouchMode="false"
            android:paddingTop="@dimen/margin_15"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <!--   <include layout="@layout/toolbar" />-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:gravity="left">

                    <ImageButton
                        android:id="@+id/btn_toolbar_left1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:background="@null"
                        android:paddingTop="@dimen/margin_1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_forbes_drawer"
                        android:tint="@color/issue_btn_blue" />

                    <ImageButton
                        android:id="@+id/btn_toolbar_left"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:background="@null"
                        android:padding="@dimen/margin_6"
                        android:paddingTop="@dimen/margin_1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_navigation_menu" />


                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btn_toolbar_home"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@null"
                    android:scaleType="@null"
                    android:src="@mipmap/issues_icon"
                    android:tint="@color/issue_btn_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/toolbar_dropshadow" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <in.plash.trunext.customfonts.MyTextView
                        android:id="@+id/toolbar_title_forbes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/toolbar_title"
                        android:textColor="@color/issue_btn_blue"
                        android:textSize="30sp"
                        android:visibility="visible"
                        trunext:fontName="@string/Nicholas_Bold" />

                    <in.plash.trunext.customfonts.MyTextView
                        android:id="@+id/toolbar_India"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/toolbar_title_forbes"
                        android:layout_alignRight="@+id/toolbar_title_forbes"
                        android:layout_alignTop="@+id/toolbar_title_forbes"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_marginTop="-3dp"
                        android:text="@string/toolbar_subtitle"
                        android:textColor="@color/black"
                        android:textSize="8sp"
                        android:visibility="gone"
                        trunext:fontName="@string/segoe_ui_bold" />

                </RelativeLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="bottom"
                android:background="@drawable/toolbar_dropshadow"
                android:visibility="visible" />
        </android.support.v7.widget.Toolbar>

        <!-- </android.support.design.widget.CollapsingToolbarLayout>-->

    </android.support.design.widget.AppBarLayout>


    <include
        layout="@layout/content_main"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

