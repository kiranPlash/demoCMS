<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:trunext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/margin_5"
    android:paddingLeft="12.5dp"
    android:paddingRight="12.5dp">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/inside_margin_5px"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:background="#ececec" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:layout_marginTop="@dimen/margin_20"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/forbes_load"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/progress_animation" />


                <ImageView
                    android:id="@+id/issue_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:clickable="false" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_weight="2"
            android:gravity="left"
            android:orientation="vertical">

            <in.plash.trunext.customfonts.MyTextView
                android:id="@+id/txt_issue_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ellipsize="end"
                android:text="SEPTEMBER, 2015"
                android:textAllCaps="false"
                android:textColor="#aba7aa"
                android:textSize="@dimen/text_size_h9"
                trunext:fontName="@string/SourceSansPro_Regular" />

            <in.plash.trunext.customfonts.MyTextView
                android:id="@+id/issue_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingTop="@dimen/margin_2"
                android:text="Headline"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_h7"
                trunext:fontName="@string/SourceSansPro_Regular" />

            <in.plash.trunext.customfonts.MyTextView
                android:id="@+id/issue_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingBottom="@dimen/margin_7"
                android:paddingTop="@dimen/margin_5"
                android:text="@string/place_holder_sum"
                android:textColor="#7f7f7f"
                android:textSize="@dimen/text_size_h8"
                trunext:fontName="@string/SourceSansPro_Regular" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">

                <in.plash.trunext.customfonts.MyTextView
                    android:id="@+id/issue_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rounded_corner"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_7"
                    android:paddingEnd="@dimen/margin_25"
                    android:paddingLeft="@dimen/margin_25"
                    android:paddingRight="@dimen/margin_25"
                    android:paddingStart="@dimen/margin_25"
                    android:paddingTop="@dimen/margin_7"
                    android:text="Buy"
                    android:textColor="@color/issue_btn_blue"
                    android:textSize="@dimen/text_size_h8"
                    android:visibility="gone"
                    trunext:fontName="@string/SourceSansPro_Regular" />

                <in.plash.trunext.customfonts.MyTextView
                    android:id="@+id/issue_subscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rounded_corner"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_7"
                    android:paddingEnd="@dimen/margin_25"
                    android:paddingLeft="@dimen/margin_25"
                    android:paddingRight="@dimen/margin_25"
                    android:paddingStart="@dimen/margin_25"
                    android:paddingTop="@dimen/margin_7"
                    android:text="Subscribe"
                    android:textColor="@color/issue_btn_blue"
                    android:textSize="@dimen/text_size_h8"
                    android:visibility="gone"
                    trunext:fontName="@string/SourceSansPro_Regular" />

                <in.plash.trunext.customfonts.MyTextView
                    android:id="@+id/issue_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rounded_corner_read"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_7"
                    android:paddingEnd="@dimen/margin_25"
                    android:paddingLeft="@dimen/margin_25"
                    android:paddingRight="@dimen/margin_25"
                    android:paddingStart="@dimen/margin_25"
                    android:paddingTop="@dimen/margin_7"
                    android:text="Read"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_h8"
                    trunext:fontName="@string/SourceSansPro_Regular" />


            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/inside_margin_5px"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_10"
        android:background="#ececec" />
</RelativeLayout>